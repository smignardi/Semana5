<?xml version="1.0" encoding="UTF-8"?>
<configuration status="WARN">
    <appenders>
        <File name="MyFile" fileName="src/test/resources/logs/logs.txt" append="false">
            <PatternLayout pattern="%msg%n"/>
        </File>
    </appenders>

    <loggers>
        <root level="info">
            <appender-ref ref="MyFile" level="trace"/>
        </root>
    </loggers>
</configuration>